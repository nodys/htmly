    "stylus": "^0.49.1",
    "syntax-error": "^1.1.1"
  },
  "browser": "./src/htmly-browser.js",
  "keywords": [
    "html",
    "browserify",
    "browserify-transform",
    "browserify-plugin",
    "livereload",
    "browser",
    "webcomponent"
