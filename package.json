    "jshint": "./node_modules/.bin/jshint --exclude node_modules",
    "doc": "./support/updatedoc.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/limpidjs/htmly.git"
  },
  "author": "Jean Ponchon <jean.ponchon@novadiscovery.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/limpidjs/htmly/issues"
  },
  "homepage": "https://github.com/limpidjs/htmly",
  "dependencies": {
    "async": "^0.9.0",
    "chokidar": "^0.9.0",
    "concat-stream": "^1.4.6",
    "csswring": "^1.3.0",
    "debug": "^2.0.0",
    "extend": "^1.3.0",
    "lrio": "0.0.3",
    "postcss": "^2.2.5",
    "relative-package": "^1.0.0",
    "resolve": "^1.0.0",
    "through2": "^1.1.1"
  },
  "devDependencies": {
    "browserify": "^5.12.1",
    "docflux": "^1.1.2",
